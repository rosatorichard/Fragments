<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.batchmates.android.fragmentstuff.MainActivity">


    <TextView
        android:id="@+id/tvUpdate"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="red"
        android:text="add Red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="blue"
        android:text="add Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="yellow"
        android:text="add Yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="delete"
        android:text="Delete Fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <FrameLayout
        android:id="@+id/firstFrag"
        android:layout_width="match_parent"
        android:layout_height="100dp"></FrameLayout>

    <FrameLayout
        android:id="@+id/secondFrag"
        android:layout_width="match_parent"
        android:layout_height="100dp"></FrameLayout>

    <FrameLayout
        android:id="@+id/thirdFrag"
        android:layout_width="match_parent"
        android:layout_height="100dp"></FrameLayout>



</LinearLayout>
